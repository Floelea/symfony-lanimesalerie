{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}

    {% for product in products %}
        <div class="card">
            <p>{{ product.name }}</p>

            {% for image in product.images %}


                        <img src="{{ vich_uploader_asset(image, 'imageFile') }}" class="card-img-top" alt="..." style="width: 50px">





            {% endfor %}

            <p>{{ product.description }}</p>
            <p>{{ product.priceHt }}</p>
            <p>{{ product.name }}</p>
            <p>{{ product.createdAt|date('d/m/Y') }}</p>
        </div>

    {% endfor %}
    {{ knp_pagination_render(products) }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% form_theme formUserAddress 'bootstrap_5_layout.html.twig' %}
{% block body %}
    <h1>Register</h1>

    <div class="container userInfo">
        <div class="row mt-5 container">
            <div class="col-3 p-0 d-flex flex-column align-items-center">
                <div class="mt-4">
                    <a href="{{ path('user_edit') }}" class="d-flex align-items-center m-3"><i class="fa-regular fa-user me-2"></i><p class="m-0">Modifier mon profil</p></a>
                    <a href="{{ path('app_address') }}" class="d-flex align-items-center m-3"><i class="fa-regular fa-address-book me-2"></i><p class="m-0">Mes adresses</p></a>
                    <a href="" class="d-flex align-items-center m-3"><i class="fa-regular fa-clipboard me-2"></i><p class="m-0">Mes commandes</p></a>
                </div>

            </div>
            <div class="col-9 p-0">
                <div class="bg-white m-4">
                    <div class="px-4">
                        <div class="">
                            <h5 class="pt-2 fw-bold">Nouvelle adresse</h5>
                        </div>
                        <div class="py-3">
                            {{ form_start(formUserAddress) }}
                                {{ form_row(formUserAddress.number) }}
                                {{ form_row(formUserAddress.street) }}
                                {{ form_row(formUserAddress.postalCode) }}
                                {{ form_row(formUserAddress.city) }}
                                <button type="submit" class="btn btn-success">Register</button>
                                {{ form_end(formUserAddress) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
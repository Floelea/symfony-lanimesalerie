{% extends 'base.html.twig' %}
{% form_theme formUserEdit 'bootstrap_5_layout.html.twig' %}
{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <div class="container userInfo">
        <div class="row mt-5 container">
            <div class="col-3 p-0 d-flex flex-column align-items-center">
                <div class="mt-4">
                    <a href="{{ path('admin_user') }}" class="d-flex align-items-center m-3"><i class="far fa-user me-3"></i><p class="m-0">Clients</p></a>
                    <a href="{{ path('admin_order') }}" class="d-flex align-items-center m-3"><i class="fas fa-shipping-fast me-3"></i><p class="m-0">Commandes</p></a>
                    <a href="" class="d-flex align-items-center m-3"><i class="fas fa-barcode me-3"></i><p class="m-0">Produits</p></a>
                </div>

            </div>
            <div class="col-9 p-0">
                <div class="bg-white m-4">
                    <div class="px-4">
                        <div class="">
                            <h5 class="pt-2 fw-bold"> Tableau de bord de la semaine </h5>
                        </div>
                        <div class="py-3">
                            {{ form_start(formUserEdit) }}
                            {{ form_row(formUserEdit.username) }}
                            {{ form_row(formUserEdit.name) }}
                            {{ form_row(formUserEdit.lastName) }}
                            {{ form_row(formUserEdit.birthDay) }}
                            <button type="submit" class="btn btn-info">Modifier</button>
                            {{ form_end(formUserEdit) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/e772130b79.js" crossorigin="anonymous"></script>

{% endblock %}

{% extends 'base.html.twig' %}
{% form_theme formSearchUser 'bootstrap_5_layout.html.twig' %}
{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-2 ps-5 pt-5" style="background:linear-gradient(to bottom,black,white)">
            <a href="{{ path('admin_user') }}" class="d-flex align-items-center mb-3"><i class="far fa-user me-2 text-white"></i><p class="m-0 text-white">Clients</p></a>
            <a href="{{ path('admin_userNew') }}" class="d-flex align-items-center m-3 ms-5 newAddress"><p class="me-2 text-white m-0">+</p><p class="m-0 text-white">Nouveau client</p></a>
            <a href="{{ path('admin_order') }}" class="d-flex align-items-center mb-3"><i class="fas fa-shipping-fast me-2 text-white"></i><p class="m-0 text-white">Commandes</p></a>
            <a href="{{ path('admin_product') }}" class="d-flex align-items-center mb-3"><i class="fas fa-barcode me-2 text-white"></i><p class="m-0 text-white">Produits</p></a>
        </div>
        <div class="col-10 row text-center" style="background:linear-gradient(to left top, white,rgb(144, 92, 76))";>
            <p class="textAnimesalerie fs-1 text-white mb-2">ESPACE ADMINISTRATEUR</p>
            <div class="col-6" >
                <div class="d-flex align-items-center flex-column">
                    <h5 class="py-4">Rechercher un client</h5>
                    <div class="pb-4">
                        {{ form(formSearchUser) }}
                    </div>
                    {% for user in users %}
                        <table class="table table-striped">
                            <thead class="align-items-center">
                            <tr style="font-size: 13px">
                                <th class="text-white">Username</th>
                                <th class="text-white">Création du compte</th>
                                <th class="text-white">Nombre de commande </th>
                                <th class="text-white">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><em>{{ user.username }}</em></td>
                                <td><em>{{ user.createdAt|date('d/m/Y') }}</em></td>
                                <td><em>{{ user.orders|length}}</em></td>
                                <td>
                                    <a href="{{ path('admin_userEdit',{id:user.id}) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                    <a href="{{ path('admin_userDelete',{id:user.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    {% endfor %}
                </div>
            </div>
            <div class="col-6">
                <div class="d-flex align-items-center flex-column">
                        <h5 class="py-4">Nouveau client de la semaine</h5>
                        <table class="table table-striped">
                            <thead class="align-items-center">
                            <tr style="font-size: 13px">
                                <th class="text-white">Username</th>
                                <th class="text-white">Création du compte</th>
                                <th class="text-white">Nombre de commande </th>
                                <th class="text-white">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for newUser in newUsers %}
                                <tr>
                                    <td><em>{{ newUser.username }}</em></td>
                                    <td><em>{{ newUser.createdAt|date('d/m/Y') }}</em></td>
                                    <td><em>{{ newUser.orders|length}}</em></td>
                                    <td>
                                        <a href="{{ path('admin_userEdit',{id:newUser.id}) }}" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                        <a href="{{ path('admin_userDelete',{id:newUser.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                </div>
            </div>
        </div>



    </div>


                {{ form_row(formProductEdit.productStatus) }}
                {{ form_row(formProductEdit.promo) }}

                    {{ form_row(formProductEdit.images) }}



                <div class="d-flex flex-column">
                    <button type="submit" class="btn btn-success">Modifier</button>
                </div>

                {{ form_end(formProductEdit) }}
            </div>
        </div>

                {{ form_row(registrationForm.agreeTerms) }}
                <div class="d-flex flex-column">
                    <button type="submit" class="btn btn-success">Créer votre compte</button>
                </div>

                {{ form_end(registrationForm) }}



        </div>
    </div>

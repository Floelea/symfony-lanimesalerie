                        <a href=""><i class="fa-regular fa-heart p-2 fs-4 likeCard"></i></a>
                    </div>

                    {% for image in product.images %}
                        {% if loop.first %}
                            <div class="d-flex justify-content-center mb-3">
                                <a href="{{ path('product_show',{id:product.id}) }}"><img src="{{ vich_uploader_asset(image, 'imageFile') }}" class="card-img-top" alt="..."></a>
                            </div>
                        {% endif %}
                    {% endfor %}
                    <p class="text-center nameCard">{{ product.name }}</p>
                    <div class="d-flex justify-content-center avisCard align-items-center mb-3">
                        <i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i>
